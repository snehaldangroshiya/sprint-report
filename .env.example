# ============================================
# NextReleaseMCP - Environment Configuration Template
# Copy this file to .env and fill in your values
# ============================================

# ============================================
# Jira Configuration (REQUIRED)
# ============================================
JIRA_EMAIL=your.email@company.com
JIRA_BASE_URL=https://jira.yourcompany.com
JIRA_API_TOKEN=your_jira_bearer_token_here
JIRA_AUTH_TYPE=bearer

# Optional Jira Configuration
# JIRA_MAX_RESULTS=100
# JIRA_TIMEOUT=30000

# ============================================
# GitHub Configuration (REQUIRED)
# ============================================
GITHUB_TOKEN=ghp_your_github_personal_access_token_here

# Optional GitHub Configuration
# GITHUB_API_URL=https://api.github.com
# GITHUB_TIMEOUT=30000
# GITHUB_USER_AGENT=JiraGitHubReporter/1.0.0

# ============================================
# Server Configuration
# ============================================
MCP_SERVER_PORT=3000
MCP_SERVER_HOST=localhost
NODE_ENV=development

# ============================================
# Redis Cache Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# Cache Configuration
# ============================================
MEMORY_CACHE_MAX_SIZE=50000
MEMORY_CACHE_TTL=300

# ============================================
# Report Configuration
# ============================================
REPORT_OUTPUT_DIR=./sprint-reports
REPORT_TEMPLATE_DIR=./src/templates

# Optional Report Configuration
# REPORT_MAX_SIZE=52428800

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
ENABLE_API_LOGGING=true

# ============================================
# Security Configuration
# ============================================
ENABLE_CORS=true
CORS_ORIGIN=*
ENABLE_HELMET=true

# Optional Security Configuration
# RATE_LIMIT_PER_MINUTE=100
# MAX_REQUEST_SIZE=10485760

# ============================================
# Notes
# ============================================
# 1. NEVER commit .env files to version control
# 2. Keep .env files in .gitignore
# 3. Use different .env files for different environments
# 4. For production, consider using environment-specific files
#    Example: .env.development, .env.staging, .env.production
# 5. For sensitive data in production, use:
#    - Docker Secrets
#    - Kubernetes Secrets
#    - AWS Secrets Manager
#    - Azure Key Vault
#    - HashiCorp Vault
