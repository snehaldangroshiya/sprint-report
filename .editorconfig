# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# =====================================================
# Default settings for all files
# =====================================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# =====================================================
# TypeScript & JavaScript
# =====================================================
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2
max_line_length = 100
quote_type = single

# =====================================================
# JSON
# =====================================================
[*.json]
indent_size = 2
insert_final_newline = false

[package.json]
indent_size = 2

[tsconfig*.json]
indent_size = 2

# =====================================================
# YAML
# =====================================================
[*.{yml,yaml}]
indent_size = 2

# =====================================================
# Markdown
# =====================================================
[*.md]
max_line_length = off
trim_trailing_whitespace = false
indent_size = 2

[CHANGELOG.md]
indent_size = 2

# =====================================================
# Shell Scripts
# =====================================================
[*.sh]
indent_size = 2
end_of_line = lf

# =====================================================
# Configuration Files
# =====================================================
[*.{env,env.*}]
insert_final_newline = true

[.env*]
insert_final_newline = true

[*.{config.js,config.ts}]
indent_size = 2

# =====================================================
# HTML & CSS
# =====================================================
[*.html]
indent_size = 2

[*.css]
indent_size = 2

[*.{scss,sass,less}]
indent_size = 2

# =====================================================
# XML & SVG
# =====================================================
[*.{xml,svg}]
indent_size = 2

# =====================================================
# Makefiles
# =====================================================
[Makefile]
indent_style = tab

[{GNUmakefile,*.mk}]
indent_style = tab

# =====================================================
# Git
# =====================================================
[.gitattributes]
indent_size = 2

[.gitignore]
indent_size = 2

# =====================================================
# Docker
# =====================================================
[Dockerfile*]
indent_size = 2

[docker-compose*.yml]
indent_size = 2

# =====================================================
# Python (if used)
# =====================================================
[*.py]
indent_size = 4
max_line_length = 88

# =====================================================
# Go (if used)
# =====================================================
[*.go]
indent_style = tab
indent_size = 4

# =====================================================
# Ruby (if used)
# =====================================================
[*.rb]
indent_size = 2

# =====================================================
# Java (if used)
# =====================================================
[*.java]
indent_size = 4

# =====================================================
# C/C++ (if used)
# =====================================================
[*.{c,h,cpp,hpp}]
indent_size = 4

# =====================================================
# Rust (if used)
# =====================================================
[*.rs]
indent_size = 4
max_line_length = 100
