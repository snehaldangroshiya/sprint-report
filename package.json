{
  "name": "jira-github-sprint-reporter-mcp",
  "version": "1.0.0",
  "description": "MCP Server for generating comprehensive Jira-GitHub sprint reports",
  "main": "src/server.ts",
  "scripts": {
    "build": "tsc && npm run copy-templates",
    "build:watch": "tsc --watch",
    "copy-templates": "cp -r src/templates dist/",
    "start": "node dist/server.js",
    "start:web": "node dist/web-server.js",
    "start:http": "node dist/http-server.js",
    "dev": "tsx watch src/server.ts",
    "dev:web": "tsx watch src/web-server.ts",
    "dev:http": "tsx watch src/http-server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test:playwright:headed": "playwright test --headed",
    "test:playwright:debug": "playwright test --debug",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run test",
    "prepare": "husky install",
    "docker:build": "docker build -t sprint-reporter-mcp .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "keywords": [
    "mcp",
    "jira",
    "github",
    "sprint",
    "reporting",
    "model-context-protocol"
  ],
  "author": "Your Organization",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/puppeteer": "^5.4.7",
    "axios": "^1.6.0",
    "bcrypt": "^6.0.0",
    "canvas": "^2.11.2",
    "chart.js": "^4.4.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dompurify": "^3.0.5",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "generic-pool": "^3.9.0",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "ioredis": "^5.3.2",
    "joi": "^18.0.1",
    "jsdom": "^22.1.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "node-cache": "^5.1.2",
    "puppeteer": "^21.11.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/dompurify": "^3.0.3",
    "@types/jest": "^29.5.5",
    "@types/jsdom": "^21.1.3",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lint-staged": "^14.0.1",
    "nock": "^13.3.3",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^3.13.0",
    "typescript": "^5.2.2"
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/jira-github-sprint-reporter-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/jira-github-sprint-reporter-mcp/issues"
  },
  "homepage": "https://github.com/your-org/jira-github-sprint-reporter-mcp#readme"
}
